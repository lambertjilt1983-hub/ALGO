# AlgoTrade Pro Environment Configuration
# =========================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control!

# Application Settings
APP_NAME=AlgoTrade Pro
APP_VERSION=1.0.0
ENVIRONMENT=development  # development, staging, production

# Security
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
DATABASE_URL=sqlite:///./algotrade.db
# For PostgreSQL: postgresql://user:password@localhost/algotrade
# For MySQL: mysql+pymysql://user:password@localhost/algotrade

# Encryption
ENCRYPTION_KEY=your-fernet-encryption-key-change-in-production

# Server Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=$PORT
#BACKEND_HOST=localhost
#BACKEND_PORT=8000
FRONTEND_HOST=0.0.0.0
#FRONTEND_HOST=localhost
FRONTEND_PORT=$PORT
#FRONTEND_PORT=3000
REACT_APP_API_URL=https://algo-trade-backend.up.railway.app

# CORS Settings (comma-separated origins)
ALLOWED_ORIGINS=https://algo-trade-frontend.up.railway.app
#ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Market Hours (NSE - Equities, 2026)
MARKET_TIMEZONE=Asia/Kolkata
MARKET_HOLIDAYS=2026-01-15,2026-01-26,2026-02-15,2026-03-03,2026-03-21,2026-03-26,2026-03-31,2026-04-03,2026-04-14,2026-05-01,2026-05-28,2026-06-26,2026-08-15,2026-09-14,2026-10-02,2026-10-20,2026-11-08,2026-11-10,2026-11-24,2026-12-25

# Zerodha Kite Connect (Get from https://developers.kite.trade/)
ZERODHA_API_KEY=[REMOVED_ZERODHA_API_KEY]
ZERODHA_API_SECRET=[REMOVED_ZERODHA_API_SECRET]
ZERODHA_REDIRECT_URL=https://algo-trade-backend.up.railway.app/brokers/zerodha/callback

# Upstox Developer API
UPSTOX_API_KEY=
UPSTOX_API_SECRET=
UPSTOX_REDIRECT_URL=

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=lambertjilt@gmail.com
SMTP_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@algotradepro.com

# Trading Settings
PAPER_TRADING_MODE=True  # Set to False for live trading
MAX_ORDERS_PER_DAY=100
MAX_POSITION_SIZE_PERCENT=20  # Max % of portfolio per position
DEFAULT_STOP_LOSS_PERCENT=2
DEFAULT_TAKE_PROFIT_PERCENT=5

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60  # seconds

# Redis (for caching and sessions - optional)
REDIS_ENABLED=False
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Monitoring & Analytics
SENTRY_DSN=  # For error tracking
GOOGLE_ANALYTICS_ID=  # For usage analytics

# Feature Flags
ENABLE_BACKTESTING=True
ENABLE_LIVE_TRADING=False  # Enable only after thorough testing
ENABLE_WEBSOCKET=True
ENABLE_NOTIFICATIONS=True
ENABLE_MULTI_BROKER=True

# API Rate Limits (requests per minute)
ZERODHA_RATE_LIMIT=180
UPSTOX_RATE_LIMIT=250
ANGEL_ONE_RATE_LIMIT=200
