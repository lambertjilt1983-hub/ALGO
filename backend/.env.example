# AlgoTrade Pro Backend - Production Environment (Railway)
# ==========================================================
# Railway will auto-set: $PORT, DATABASE_URL (if using Railway PostgreSQL)
# Add all other variables in Railway Dashboard â†’ Service Variables

# ============== CRITICAL FOR PRODUCTION ==============
FERNET_KEY=<GENERATE_FRESH_FERNET_KEY>
ENCRYPTION_KEY=<SAME_OR_DIFFERENT_KEY>
DATABASE_URL=<RAILWAY_POSTGRESQL_CONNECTION_URL>
SECRET_KEY=<GENERATE_32_CHAR_RANDOM_STRING>

# ============== SERVER CONFIGURATION ==============
BACKEND_HOST=0.0.0.0
BACKEND_PORT=$PORT
ENVIRONMENT=production
APP_NAME=AlgoTrade Pro
APP_VERSION=1.0.0

# ============== SECURITY ==============
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============== CORS - PRODUCTION ==============
ALLOWED_ORIGINS=https://<your-frontend-url>.up.railway.app

# ============== LOGGING ==============
LOG_LEVEL=INFO

# ============== BROKER CREDENTIALS ==============
ZERODHA_API_KEY=<YOUR_ZERODHA_API_KEY>
ZERODHA_API_SECRET=<YOUR_ZERODHA_API_SECRET>
ZERODHA_REDIRECT_URL=https://<your-backend-url>.up.railway.app/brokers/zerodha/callback
UPSTOX_API_KEY=
UPSTOX_API_SECRET=
UPSTOX_REDIRECT_URL=
ANGEL_ONE_API_KEY=
ANGEL_ONE_API_SECRET=
GROWW_API_KEY=
GROWW_API_SECRET=

# ============== EMAIL CONFIGURATION ==============
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=<YOUR_EMAIL@gmail.com>
SMTP_PASSWORD=<YOUR_APP_SPECIFIC_PASSWORD>
EMAIL_FROM=noreply@algotradepro.com

# ============== TRADING SETTINGS ==============
PAPER_TRADING_MODE=true
MAX_ORDERS_PER_DAY=100
MAX_POSITION_SIZE_PERCENT=20
DEFAULT_STOP_LOSS_PERCENT=2
DEFAULT_TAKE_PROFIT_PERCENT=5

# ============== RATE LIMITING ==============
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# ============== REDIS (Optional) ==============
REDIS_ENABLED=false
REDIS_HOST=<RAILWAY_REDIS_HOST>
REDIS_PORT=<RAILWAY_REDIS_PORT>
REDIS_DB=0
REDIS_PASSWORD=<RAILWAY_REDIS_PASSWORD>

# ============== MONITORING ==============
SENTRY_DSN=
GOOGLE_ANALYTICS_ID=

# ============== FEATURE FLAGS ==============
ENABLE_BACKTESTING=true
ENABLE_LIVE_TRADING=false
ENABLE_WEBSOCKET=true
ENABLE_NOTIFICATIONS=true
ENABLE_MULTI_BROKER=true
