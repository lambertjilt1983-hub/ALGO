# AlgoTrade Pro Backend Environment Configuration
# ==================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control!

# ============== RAILWAY DEPLOYMENT ==============
# Use these exact variable names in Railway Service Variables

# Critical for Encryption (Railway: Set in Service Variables)
FERNET_KEY=your-32-byte-base64-fernet-key-here
ENCRYPTION_KEY=your-encryption-key-here

# Database URL (Railway: Set in Service Variables)
DATABASE_URL=postgresql://user:password@your-db-host:5432/algotrade

# ============== SERVER CONFIGURATION ==============
# Railway uses $PORT environment variable automatically
BACKEND_HOST=0.0.0.0
BACKEND_PORT=$PORT

# Application Settings
APP_NAME=AlgoTrade Pro
APP_VERSION=1.0.0
ENVIRONMENT=production

# ============== SECURITY ==============
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============== CORS SETTINGS ==============
# For Railway: Set to your frontend URL
# Example: https://algo-trade-frontend.up.railway.app
ALLOWED_ORIGINS=https://your-frontend.up.railway.app

# ============== LOGGING ==============
LOG_LEVEL=INFO

# ============== BROKER CREDENTIALS ==============
# Get from https://developers.kite.trade/
ZERODHA_API_KEY=your-zerodha-api-key
ZERODHA_API_SECRET=your-zerodha-api-secret
ZERODHA_REDIRECT_URL=https://your-backend.up.railway.app/brokers/zerodha/callback

# Upstox (optional)
UPSTOX_API_KEY=
UPSTOX_API_SECRET=
UPSTOX_REDIRECT_URL=

# Angel One (optional)
ANGEL_ONE_API_KEY=
ANGEL_ONE_API_SECRET=

# Groww (optional)
GROWW_API_KEY=
GROWW_API_SECRET=

# ============== EMAIL CONFIGURATION ==============
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@algotradepro.com

# ============== TRADING SETTINGS ==============
PAPER_TRADING_MODE=True
MAX_ORDERS_PER_DAY=100
MAX_POSITION_SIZE_PERCENT=20
DEFAULT_STOP_LOSS_PERCENT=2
DEFAULT_TAKE_PROFIT_PERCENT=5

# ============== RATE LIMITING ==============
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# ============== REDIS (Optional) ==============
REDIS_ENABLED=False
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ============== MONITORING ==============
SENTRY_DSN=
GOOGLE_ANALYTICS_ID=

# ============== FEATURE FLAGS ==============
ENABLE_BACKTESTING=True
ENABLE_LIVE_TRADING=False
ENABLE_WEBSOCKET=True
ENABLE_NOTIFICATIONS=True
ENABLE_MULTI_BROKER=True
